<% content_for :title, "Political Entities - Browse All" %>

<%= render "application/navbar" %>

<div class="container py-12 mx-auto px-4 sm:px-6 lg:px-8">
  <!-- Header Section -->
  <div class="hero min-h-[300px] bg-gradient-to-br from-primary/10 via-base-200 to-secondary/10 rounded-2xl shadow-2xl mb-12">
    <div class="hero-content w-full flex flex-row justify-between h-full">
      <!-- Title Section -->
      <div class="text-left">
        <h1 class="text-5xl font-bold mb-4 text-base-content">Political Entities</h1>
        <p class="text-xl text-base-content/80 mb-6 leading-relaxed">
          Browse and filter political representatives by jurisdiction, party affiliation, and interest categories.
        </p>

      <!-- Active Filters Row -->
      <% if @filter.has_active_filters? %>
        <div class="flex flex-wrap gap-2 justify-start">
          <% @filter.active_filters.each do |filter| %>
            <div class="badge <%= filter_badge_class(filter[:type]) %> badge-xl">
              <%= filter[:type].to_s.humanize %>: <%= filter[:label] %>
              <%= link_to "Ã—", @filter.clear_filter_url(filter[:type]),
                  class: "ml-2 hover:text-error" %>
            </div>
          <% end %>
        </div>
      <% end %>
      </div>

      <!-- Results Summary -->
      <div class="flex justify-center">
        <div class="stats stats-horizontal shadow-lg bg-base-100 border border-base-300 rounded-2xl">
          <div class="stat">
            <div class="stat-figure text-primary">
              <%= render 'shared/icons/building', class: 'inline-block w-8 h-8 stroke-current' %>
            </div>
            <div class="stat-title">Total Entities</div>
            <div class="stat-value text-primary"><%= @filter.political_entities.count %></div>
            <div class="stat-desc">Political entities found</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Filters Section -->
  <div class="card bg-base-100 shadow-xl border border-base-300 mb-8">
    <div class="card-body">
      <h2 class="card-title text-2xl mb-6">
        <%= render 'shared/icons/filter', class: 'inline-block w-6 h-6 stroke-current' %>
        Filters
      </h2>

      <%= form_with url: political_entities_path, method: :get, local: true, class: "space-y-6" do |form| %>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <!-- Jurisdiction Filter -->
          <div class="form-control">
            <label class="label">
              <span class="label-text font-semibold">Jurisdiction</span>
            </label>
            <%= form.select :jurisdiction,
                options_from_collection_for_select(@filter.jurisdictions, :id, :name, @filter.jurisdiction_filter),
                { prompt: "All Jurisdictions" },
                { class: "select select-bordered w-full" } %>
          </div>

          <!-- Party Filter -->
          <div class="form-control">
            <label class="label">
              <span class="label-text font-semibold">Party</span>
            </label>
            <%= form.select :party,
                options_for_select([["All Parties", ""]] + @filter.parties.map { |party| [party, party] }, @filter.party_filter),
                {},
                { class: "select select-bordered w-full" } %>
          </div>

          <!-- Interest Category Filter -->
          <div class="form-control">
            <label class="label">
              <span class="label-text font-semibold">Interest Category</span>
            </label>
            <%= form.select :interest_category,
                options_from_collection_for_select(@filter.interest_categories, :key, :label, @filter.interest_category_filter),
                { prompt: "All Categories" },
                { class: "select select-bordered w-full" } %>
          </div>
        </div>

        <!-- Filter Actions -->
        <div class="flex flex-wrap gap-4 justify-center">
          <%= form.submit "Apply Filters", class: "btn btn-primary" %>
          <%= link_to "Clear Filters", political_entities_path, class: "btn btn-outline" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Results Section -->
  <div class="space-y-6">
    <% if @filter.political_entities.any? %>
      <!-- Political Entities Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @filter.political_entities.each do |entity| %>
          <div class="card bg-base-100 shadow-xl border border-base-300 hover:shadow-2xl transition-all duration-300 hover:-translate-y-1">
            <div class="card-body">
              <!-- Entity Header with Profile Image -->
              <div class="flex items-center gap-3">
                <% if entity.profile_image.attached? %>
                    <div class="avatar">
                      <div class="w-16 rounded-xl">
                        <%= image_tag entity.profile_image.variant(:small),
                            alt: entity.name %>
                      </div>
                    </div>
                  <% else %>
                    <div class="avatar avatar-placeholder">
                      <div class="bg-neutral text-neutral-content rounded-xl w-16">
                        <span>
                          <%= entity.name.first.upcase %>
                        </span>
                      </div>
                    </div>
                  <% end %>
                  <div class="flex-1">
                    <div class="flex flex-row gap-1" >
                      <h3 class="card-title text-xl leading-tight flex-1">
                        <%= link_to entity.name, political_entity_path(entity),
                            class: "link link-hover text-primary" %>
                      </h3>
                      <!-- Party Affiliations -->
                      <% parties = entity.political_entity_jurisdictions.where.not(affiliation: [nil, ""]).distinct.pluck(:affiliation) %>
                      <div class="flex flex-wrap gap-1 items-start">
                        <% parties.each do |party| %>
                            <%= political_party_badge(party, class: "w-18") %>
                        <% end %>
                      </div>
                    </div>
                    <div class="flex flex-wrap gap-1 mt-2">
                      <!-- Jurisdictions -->
                      <% entity.jurisdictions.limit(3).each do |jurisdiction| %>
                        <% pej = entity.political_entity_jurisdictions.find_by(jurisdiction: jurisdiction) %>
                        <div class="">
                          <%= jurisdiction.name %>
                          <% if pej&.role.present? %>
                            <span class="ml-1 text-xs opacity-75">(<%= pej.role %>)</span>
                          <% end %>
                        </div>
                      <% end %>
                      <% if entity.jurisdictions.count > 3 %>
                        <div class="badge badge-outline badge-sm">
                          +<%= entity.jurisdictions.count - 3 %> more
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>

              <!-- Description -->
              <% if entity.description.present? %>
                <p class="text-base-content/70 text-sm mb-4 line-clamp-3">
                  <%= truncate(entity.description, length: 120) %>
                </p>
              <% end %>


              <!-- Interest Count -->
              <div class="card-actions justify-between items-center">
                <div class="font-medium">
                  <div class="badge badge-primary badge-sm">
                    <%= entity.interests.count %>
                  </div>
                  Interests
                </div>
                <%= link_to "View Details", political_entity_path(entity),
                    class: "btn btn-primary btn-sm" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Pagination or Load More could go here if needed -->
    <% else %>
      <!-- No Results -->
      <div class="card bg-base-100 shadow-xl border border-base-300">
        <div class="card-body text-center py-12">
          <h2 class="card-title justify-center text-2xl mb-4">
            No Political Entities Found
          </h2>
          <p class="text-base-content/70 mb-6 text-lg">
            No political entities match your current filter criteria.
          </p>
          <div class="flex flex-wrap gap-4 justify-center">
            <%= link_to "Clear All Filters", political_entities_path, class: "btn btn-primary" %>
            <%= link_to "Back to Search", root_path, class: "btn btn-outline" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
