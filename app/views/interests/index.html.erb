<% content_for :title, "Interests - Browse All" %>

<%= render "application/navbar" %>

<div class="container py-12 mx-auto px-4 sm:px-6 lg:px-8">
  <!-- Header Section -->
  <div class="hero min-h-[300px] bg-gradient-to-br from-secondary/10 via-base-200 to-secondary/10 rounded-2xl shadow-2xl mb-8">
    <div class="hero-content w-full">
      <div class="text-center w-full">
        <h1 class="text-4xl font-bold mb-4 text-base-content">Interests</h1>
        <p class="text-lg text-base-content/80 mb-6">
          <% if @is_search_mode %>
            Search results for "<%= @filter.query %>"
          <% else %>
            Browse and filter interests by jurisdiction, party affiliation, and interest categories.
          <% end %>
        </p>

        <!-- Search Form -->
        <div class="w-full max-w-2xl mx-auto mb-4">
          <%= form_with url: interests_path, method: :get, html: { role: "search", class: "join w-full shadow-lg" } do |f| %>
            <%= f.search_field :q,
                value: @filter.query,
                placeholder: "Search by MP name, electorate, company, or interest type...",
                class: "input input-bordered join-item flex-1 text-lg h-12" %>
            <%= f.button "Search", class: "btn btn-primary join-item h-12 px-8 text-lg", type: "submit", name: nil %>
            <!-- Preserve current filters -->
            <%= f.hidden_field :jurisdiction, value: @filter.jurisdiction_filter if @filter.jurisdiction_filter.present? %>
            <%= f.hidden_field :party, value: @filter.party_filter if @filter.party_filter.present? %>
            <%= f.hidden_field :interest_category, value: @filter.interest_category_filter if @filter.interest_category_filter.present? %>
            <%= f.hidden_field :source, value: @filter.source_filter if @filter.source_filter.present? %>
          <% end %>
        </div>

        <!-- Active Filters and Results Count -->
        <div class="flex flex-col items-center gap-3">
          <!-- Active Filters -->
          <% if @filter.has_active_filters? %>
            <div class="flex flex-wrap gap-2 justify-center">
              <% @filter.active_filters.each do |filter| %>
                <div class="badge <%= filter_badge_class(filter[:type]) %> badge-lg">
                  <%= filter[:type].to_s.humanize %>: <%= filter[:label] %>
                  <%= link_to "Ã—", @filter.clear_filter_url(filter[:type]),
                      class: "ml-2 hover:text-error" %>
                </div>
              <% end %>
            </div>
          <% end %>

          <!-- Results Count (subtle) -->
          <div class="text-sm text-base-content/60">
            <% if @is_search_mode %>
              <%= pluralize(@total_count, 'result') %> found
              <% if @search_breakdown.present? %>
                <% breakdown_parts = [] %>
                <% breakdown_parts << "#{@search_breakdown[:like_count]} exact" if @search_breakdown[:like_count] > 0 %>
                <% breakdown_parts << "#{@search_breakdown[:fts5_count]} similar" if @search_breakdown[:fts5_count] > 0 %>
                <% breakdown_parts << "#{@search_breakdown[:vector_count]} approximate" if @search_breakdown[:vector_count] > 0 %>
                <% if breakdown_parts.any? %>
                  (<%= breakdown_parts.join(', ') %>)
                <% end %>
              <% end %>
            <% else %>
              <%= pluralize(@total_count, 'interest') %> total
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Filters Section -->
  <div class="card bg-base-100 shadow-xl border border-base-300 mb-8">
    <div class="card-body">
      <h2 class="card-title text-2xl mb-6">
        <%= render 'shared/icons/filter', class: 'inline-block w-6 h-6 stroke-current' %>
        Filters
      </h2>

      <%= form_with url: interests_path, method: :get, local: true, class: "space-y-6" do |form| %>
        <!-- Preserve search query -->
        <%= form.hidden_field :q, value: @filter.query if @filter.query.present? %>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <!-- Jurisdiction Filter -->
          <div class="form-control">
            <label class="label">
              <span class="label-text font-semibold">Jurisdiction</span>
            </label>
            <%= form.select :jurisdiction,
                options_from_collection_for_select(@filter.jurisdictions, :slug, :name, @filter.jurisdiction_filter),
                { prompt: "All Jurisdictions" },
                { class: "select select-bordered w-full" } %>
          </div>

          <!-- Party Filter -->
          <div class="form-control">
            <label class="label">
              <span class="label-text font-semibold">Party</span>
            </label>
            <%= form.select :party,
                options_for_select([["All Parties", ""]] + @filter.parties.map { |party| [party, party] }, @filter.party_filter),
                {},
                { class: "select select-bordered w-full" } %>
          </div>

          <!-- Interest Category Filter -->
          <div class="form-control">
            <label class="label">
              <span class="label-text font-semibold">Interest Category</span>
            </label>
            <%= form.select :interest_category,
                options_from_collection_for_select(@filter.interest_categories, :key, :label, @filter.interest_category_filter),
                { prompt: "All Categories" },
                { class: "select select-bordered w-full" } %>
          </div>
        </div>

        <!-- Filter Actions -->
        <div class="flex flex-wrap gap-4 justify-center">
          <%= form.button "Apply Filters", class: "btn btn-primary", type: "submit", name: nil %>
          <%= link_to "Clear Filters", interests_path(q: @filter.query), class: "btn btn-outline" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Results Section -->
  <div class="space-y-6">
    <% if @interests.any? %>
      <!-- Interests Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @interests.each do |interest| %>
          <div class="card bg-base-100 shadow-xl border border-base-300 hover:shadow-2xl transition-all duration-300 hover:-translate-y-1">
            <div class="card-body">
              <!-- Interest Header -->
              <div class="flex justify-between items-start mb-4">
                <div class="flex flex-col gap-3">
                  <h3 class="card-title text-xl leading-tight">
                    <%= interest.description %>
                  </h3>
                  <span class="badge badge-accent text-white">
                    <%= interest.interest_category.label %>
                  </span>
                </div>
                <div class="dropdown dropdown-end">
                  <div tabindex="0" role="button" class="btn btn-ghost btn-sm btn-circle">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="w-5 h-5 stroke-current">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h.01M12 12h.01M19 12h.01"></path>
                    </svg>
                  </div>
                  <ul tabindex="0" class="dropdown-content z-[1] menu p-3 shadow-lg bg-base-100 rounded-box w-64 border border-base-300">
                    <li class="menu-title">
                      <span>Quick Actions</span>
                    </li>
                    <li><%= link_to "View Political Entity", political_entity_path(interest.political_entity), class: "text-sm" %></li>
                    <li><%= link_to "All from this source", interests_path(source: interest.source_id), class: "text-sm" %></li>
                  </ul>
                </div>
              </div>

              <!-- Political Entity Info -->
              <div class="card-actions justify-between items-center mt-auto">
                <div class="flex items-center gap-2">
                  <% if interest.political_entity.profile_image.attached? %>
                    <div class="avatar avatar-sm">
                      <div class="w-8 rounded">
                        <%= image_tag interest.political_entity.profile_image.variant(:small),
                            alt: interest.political_entity.name %>
                      </div>
                    </div>
                  <% else %>
                    <div class="avatar avatar-placeholder avatar-sm">
                      <div class="bg-neutral text-neutral-content rounded w-8">
                        <span class="text-xs">
                          <%= interest.political_entity.name.first.upcase %>
                        </span>
                      </div>
                    </div>
                  <% end %>
                  <div>
                    <div class="text-sm font-medium">
                      <%= link_to interest.political_entity.name, political_entity_path(interest.political_entity),
                          class: "link link-hover text-primary" %>
                    </div>
                  </div>
                </div>
                <div class="text-xs text-base-content/60">
                  Source: <%= interest.source.name %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Pagination (only in browse mode) -->
      <% unless @is_search_mode %>
        <%= render 'shared/pagination',
            pagination: @filter.pagination,
            previous_page_url: @filter.previous_page_url,
            next_page_url: @filter.next_page_url %>
      <% end %>

    <% else %>
      <!-- No Results -->
      <div class="card bg-base-100 shadow-xl border border-base-300">
        <div class="card-body text-center py-12">
          <h2 class="card-title justify-center text-2xl mb-4">
            No Interests Found
          </h2>
          <p class="text-base-content/70 mb-6 text-lg">
            No interests match your current filter criteria.
          </p>
          <div class="flex flex-wrap gap-4 justify-center">
            <%= link_to "Clear All Filters", interests_path, class: "btn btn-primary" %>
            <%= link_to "Back to Search", root_path, class: "btn btn-outline" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>